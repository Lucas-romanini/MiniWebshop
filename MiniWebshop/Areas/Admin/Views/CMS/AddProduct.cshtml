
@{
    ViewBag.Title = "AddProduct";
}

<form action="/Admin/CMS/AddProductSubmit" method="post">
    <div class="row">
        <div class="col-lg-12">
            <h2>Add Product</h2>
        </div>
        <div class="col-lg-6">
            <table>
                <tr>
                    <td>Product Name</td>
                    <td>
                        <input type="text" required placeholder="Product Name..." name="Name" />
                    </td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td>
                        <textarea name="Description"></textarea>
                    </td>
                </tr>
                <tr>
                    <td>Category</td>
                    <td>
                        <select name="CategoryID" required>
                            <option value="0" selected="selected" hidden="hidden">Select Category</option>
                            @foreach (Category category in ViewBag.Catagories)
                            {
                                <option value="@category.ID">@category.Name</option>
                            }
                        </select>

                    </td>
                </tr>
                <tr>
                    <td>Date Added</td>
                    <td>
                        <input type="date" name="DateAdded" required />
                    </td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td>
                        <input type="number" step="any" name="Price" placeholder="Price..." required />
                    </td>
                </tr>
                <tr>
                    <td>Sale Price</td>
                    <td>
                        <input type="number" step="any" name="SalePrice" placeholder="Sale Price..." required />
                    </td>
                </tr>
                <tr>
                    <td>Active</td>
                    <td>
                        <input type="radio" value="true" name="Active" required />
                        <input type="radio" value="false" name="Active" required />
                    </td>
                </tr>
            </table>
        </div>
        <div class="col-lg-6">
            <div class="row">
                @foreach (Image image in ViewBag.Images)
            {
                    <div class="col-lg-4">
                        <img src="~/Content/Images/@image.ImageUrl" class="img-responsive" />
                        <input type="checkbox" value="@image.ID" name="imageIDs" />
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-12">
            <input type="submit" value="Add Product" />
        </div>
    </div>
</form>


@section JS{
    
<script src="https://butt.tinymce.com/stable/tinymce.min.js"></script>
<script>tinymce.init({ selector:'textarea' });</script>
}