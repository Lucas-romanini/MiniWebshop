@model ProductVM
@{
    ViewBag.Title = "ShowProduct";
}

<div class="row">
    <div class="col-lg-12">
        <span><b>@Model.Product.Name</b>|<i>@Model.Category.Name</i></span>
    </div>
    <div class="col-lg-9">
        <img src="~/Content/Images/@Model.Images[0].ImageUrl"  class="img-responsive"/>
    </div>
    <div class="col-lg-3">
        <table>
            <tr>
                <td>Product Name</td>
                <td>@Model.Product.Name</td>
            </tr>
            <tr>
                <td>Category Name</td>
                <td>@Model.Category.Name</td>
            </tr>
            <tr>
                <td>Product Description</td>
                <td>@Html.Raw(Model.Product.Description)</td>
            </tr>
            <tr>
                <td>Product Price</td>
                <td>@Model.Product.Price Dkk</td>
            </tr>
            <tr>
                <td>Add to Cart</td>
                <td>
                   <form action="/Home/AddToCart/" method="post">
                       <input type="hidden" name="ID" value="@Model.Product.ID" />
                       <input type="number" min="1" max="99" name="amount" />
                       <input type="submit" value="Add" />
                   </form>
                </td>
            </tr>
        </table>
    </div>

</div>